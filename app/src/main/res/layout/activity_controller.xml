<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:background="#eee"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:orientation="horizontal"
    android:layout_marginBottom="3dp"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="true"
        android:background="#fff"
        android:layout_marginRight="3dp"
        android:id="@+id/card_light1"
        android:layout_weight="1"
        android:layout_gravity="center"
        card_view:cardCornerRadius="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_weight="15"
                android:clickable="true"
                android:src="@mipmap/lightoff"
                android:id="@+id/image_light1"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/device_light1"
                android:layout_below="@+id/image_light1"
                android:paddingRight="5dp"
                android:textAlignment="center"
                android:layout_weight="0.5"
                android:layout_marginTop="10dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:text="Device : Light Bulb"
                android:textColor="@color/cardview_dark_background"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status_light1"
                android:layout_below="@+id/device_light1"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:text="Status : OFF"
                android:textColor="@color/cardview_dark_background"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardUseCompatPadding="true"
        android:background="#fff"
        android:layout_weight="1"
        android:id="@+id/card_light2"
        android:layout_gravity="center"
        android:layout_marginLeft="3dp"
        card_view:cardCornerRadius="0dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:clickable="true"
                android:layout_weight="15"
                android:src="@mipmap/lightoff"
                android:id="@+id/image_light2"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/device_light2"
                android:paddingRight="5dp"
                android:textAlignment="center"
                android:paddingLeft="5dp"
                android:layout_marginTop="10dp"
                android:paddingTop="5dp"
                android:textSize="16sp"
                android:layout_weight="0.5"
                android:textStyle="normal"
                android:text="Device : Light Bulb"
                android:textColor="@color/cardview_dark_background"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/status_light2"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:layout_weight="0.5"
                android:textAlignment="center"
                android:paddingTop="5dp"
                android:textSize="16sp"
                android:textStyle="normal"
                android:text="Status : OFF"
                android:textColor="@color/cardview_dark_background"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_marginTop="3dp"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardUseCompatPadding="true"
            android:background="#fff"
            android:id="@+id/card_light3"
            android:layout_weight="1"
            android:layout_marginRight="3dp"
            android:layout_gravity="center"
            card_view:cardCornerRadius="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:clickable="true"
                    android:layout_weight="15"
                    android:src="@mipmap/lightoff"
                    android:id="@+id/image_light3"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/device_light3"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/image_light3"
                    android:paddingRight="5dp"
                    android:textAlignment="center"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.5"
                    android:paddingTop="5dp"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:text="Device : Light Bulb"
                    android:textColor="@color/cardview_dark_background"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_light3"
                    android:layout_weight="0.5"
                    android:layout_below="@+id/device_light3"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:textAlignment="center"
                    android:paddingTop="5dp"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:text="Status : OFF"
                    android:textColor="@color/cardview_dark_background"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardUseCompatPadding="true"
            android:layout_weight="1"
            android:id="@+id/card_light4"
            android:layout_gravity="center"
            android:layout_marginLeft="3dp"
            android:background="#fff"
            card_view:cardCornerRadius="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/motorLayout"
                    android:weightSum="2"
                    android:layout_weight="15"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:clickable="true"
                            android:layout_weight="1"
                            android:src="@mipmap/up"
                            android:id="@+id/image_up"
                            android:layout_margin="10dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            />
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:clickable="true"
                            android:layout_weight="1"
                            android:src="@mipmap/down"
                            android:layout_margin="10dp"
                            android:id="@+id/image_down"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            />
                        </LinearLayout>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:clickable="true"
                        android:layout_weight="1"
                        android:src="@mipmap/stopclicked"
                        android:layout_margin="10dp"
                        android:id="@+id/image_stop"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        />
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/device_light4"
                    android:layout_below="@+id/motorLayout"
                    android:paddingRight="5dp"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:paddingLeft="5dp"
                    android:paddingTop="5dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:text="Device : Garage Door"
                    android:textColor="@color/cardview_dark_background"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/status_light4"
                    android:layout_below="@+id/device_light4"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_weight="0.5"
                    android:textAlignment="center"
                    android:paddingTop="5dp"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:text="Status : OFF"
                    android:textColor="@color/cardview_dark_background"
                    />
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</LinearLayout>